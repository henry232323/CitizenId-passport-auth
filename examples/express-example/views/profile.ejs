<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - Citizen iD</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 40px 20px;
    }
    
    .container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      padding: 40px;
      max-width: 900px;
      margin: 0 auto;
    }
    
    h1 {
      color: #333;
      margin-bottom: 30px;
      text-align: center;
    }
    
    .profile-section {
      margin-bottom: 30px;
    }
    
    .profile-section h2 {
      color: #667eea;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid #667eea;
    }
    
    .profile-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    
    .profile-item {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
    }
    
    .profile-label {
      font-weight: 600;
      color: #555;
      font-size: 0.9em;
      text-transform: uppercase;
      margin-bottom: 8px;
    }
    
    .profile-value {
      color: #333;
      font-size: 1.1em;
      word-break: break-all;
    }
    
    .roles {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    
    .role-badge {
      background: #667eea;
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.9em;
      font-weight: 500;
    }
    
    .json-container {
      background: #2d2d2d;
      color: #f8f8f2;
      padding: 20px;
      border-radius: 10px;
      overflow-x: auto;
      margin-top: 15px;
    }
    
    .json-container pre {
      margin: 0;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
      line-height: 1.6;
    }
    
    .btn {
      display: inline-block;
      padding: 12px 30px;
      margin: 10px 10px 0 0;
      font-size: 1em;
      font-weight: 600;
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
    }
    
    .btn-primary {
      background: #667eea;
      color: white;
    }
    
    .btn-primary:hover {
      background: #5568d3;
    }
    
    .btn-secondary {
      background: #6c757d;
      color: white;
    }
    
    .btn-secondary:hover {
      background: #5a6268;
    }
    
    .actions {
      text-align: center;
      margin-top: 40px;
      padding-top: 30px;
      border-top: 1px solid #e0e0e0;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üë§ User Profile</h1>
    
    <div class="profile-section">
      <h2>Basic Information</h2>
      <div class="profile-grid">
        <div class="profile-item">
          <div class="profile-label">User ID</div>
          <div class="profile-value"><%= user.id %></div>
        </div>
        
        <div class="profile-item">
          <div class="profile-label">Username</div>
          <div class="profile-value"><%= user.username %></div>
        </div>
        
        <div class="profile-item">
          <div class="profile-label">Display Name</div>
          <div class="profile-value"><%= user.displayName %></div>
        </div>
        
        <% if (user.authorizationId) { %>
        <div class="profile-item">
          <div class="profile-label">Authorization ID</div>
          <div class="profile-value"><%= user.authorizationId %></div>
        </div>
        <% } %>
      </div>
    </div>
    
    <% if (user.emails && user.emails.length > 0) { %>
    <div class="profile-section">
      <h2>Email Addresses</h2>
      <div class="profile-grid">
        <% user.emails.forEach(email => { %>
        <div class="profile-item">
          <div class="profile-label">Email</div>
          <div class="profile-value">
            <%= email.value %>
            <% if (email.verified) { %>
              ‚úì Verified
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>
    
    <% if (user.roles && user.roles.length > 0) { %>
    <div class="profile-section">
      <h2>Roles</h2>
      <div class="roles">
        <% user.roles.forEach(role => { %>
          <span class="role-badge"><%= role %></span>
        <% }); %>
      </div>
    </div>
    <% } %>
    
    <% if (user.accessToken) { %>
    <div class="profile-section">
      <h2>Access Token</h2>
      <div class="profile-item">
        <div class="profile-label">Token (truncated)</div>
        <div class="profile-value" style="font-family: monospace; font-size: 0.85em;">
          <%= user.accessToken.substring(0, 50) %>...
        </div>
      </div>
    </div>
    <% } %>
    
    <% if (user.refreshToken) { %>
    <div class="profile-section">
      <h2>Refresh Token</h2>
      <div class="profile-item">
        <div class="profile-label">Token</div>
        <div class="profile-value" style="font-family: monospace; font-size: 0.85em;">
          <%= user.refreshToken %>
        </div>
      </div>
    </div>
    <% } %>
    
    <% if (user._customClaims && Object.keys(user._customClaims).length > 0) { %>
    <div class="profile-section">
      <h2>Custom Profile Claims</h2>
      <p style="color: #666; margin-bottom: 15px;">
        These claims are available when custom profile scopes are requested (e.g., discord.profile, rsi.profile, etc.)
      </p>
      <div class="json-container">
        <pre><%= JSON.stringify(user._customClaims, null, 2) %></pre>
      </div>
    </div>
    <% } %>
    
    <div class="profile-section">
      <h2>Raw JSON Data</h2>
      <div class="json-container">
        <pre><%= JSON.stringify(user._json, null, 2) %></pre>
      </div>
    </div>
    
    <div class="actions">
      <a href="/" class="btn btn-primary">‚Üê Back to Home</a>
      <a href="/logout" class="btn btn-secondary">Logout</a>
    </div>
  </div>
</body>
</html>
